# Copy this to .env ON THE SERVER for test.akuru.edu.mv
# cp .env.test-subdomain.example .env
# Then edit .env: set APP_KEY (run php artisan key:generate), DB_*, and BML_API_KEY

APP_NAME="Akuru Institute"
APP_ENV=staging
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Indian/Maldives
APP_URL=https://test.akuru.edu.mv

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# BML Connect – test subdomain (fill BML_API_KEY from BML portal)
BML_BASE_URL=https://api.uat.merchants.bankofmaldives.com.mv/public
BML_APP_ID=6f784f0b-badc-4dfe-b193-c42155c994ba
BML_API_KEY=
BML_WEBHOOK_URL=https://test.akuru.edu.mv/webhooks/bml
BML_RETURN_URL=
BML_DEFAULT_CURRENCY=MVR
BML_ENVIRONMENT=sandbox
BML_WEBHOOK_SIGNATURE_HEADER=X-BML-Signature
BML_WEBHOOK_IP_ALLOWLIST=

